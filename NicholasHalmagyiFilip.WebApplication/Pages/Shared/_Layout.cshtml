<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nicholas Halmagyi Filip WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: #3F2A56;">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="display: block; white-space: nowrap; text-align: left; color: white; margin-right: 20px;">nhalmagyi-filip</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" style="color: white;">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="DrugUnits" asp-action="Index" style="color: white;">DrugUnits</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Countries" asp-action="Index" style="color: white;">Countries</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="DrugTypes" asp-action="Index" style="color: white;">DrugTypes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Depots" asp-action="Index" style="color: white;">Depots</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link font-weight-bold" asp-area="" asp-controller="Sites" asp-action="Index" style="color: white;">Sites</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link font-weight-bold" asp-area="" asp-controller="DepotCorrelation" asp-action="Index" style="color: white;">DepotCorrelation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link font-weight-bold" asp-area="" asp-controller="Extensions" asp-action="Index" style="color: white;">Extensions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link font-weight-bold" asp-area="" asp-controller="DepotInventory" asp-action="Index" style="color: white;">DepotInventory</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link font-weight-bold" asp-area="" asp-controller="Depots" asp-action="DrugWeights" style="color: white;">DepotDrugWeights</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
